{
    // Basics
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "Default Light+",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "left",
    "workbench.settings.openDefaultSettings": false,
    "workbench.settings.openDefaultKeybindings": false,
    "workbench.list.openMode": "doubleClick",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "window.openFilesInNewWindow": "on", // !!!
    "workbench.editorAssociations": [
        {
            "viewType": "default",
            "filenamePattern": "*.pdf"
        }
    ],
    "breadcrumbs.enabled": false,
    "update.mode": "none",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    
    // Editor
    // "editor.scrollbar.horizontal": "hidden",
    // "editor.scrollbar.vertical": "hidden",
    // "explorer.autoReveal": true,
    "editor.fontSize": 18,
    "editor.lineHeight": 0,
    "editor.wordWrap": "on",
    "editor.lineNumbers": "on",
    "editor.folding": true,
    "editor.glyphMargin": true,
    "editor.codeLens": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.fontFamily": "'SF Mono', 'Droid Sans Mono', monospace, 'Droid Sans Fallback'",
    "editor.smoothScrolling": false,
    "editor.parameterHints.enabled": false,
    "editor.wrappingIndent": "same",
    "editor.tabSize": 4,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.suggestFontSize": 15,
    "editor.rulers": [
        80
    ],

    // Completion
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsintellicode.python.completionsEnabled": true,

    // Terminal
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.commandsToSkipShell": [
        // "workbench.action.quickOpen",
        "workbench.action.toggleSidebarVisibility",
    ],

    // Debug
    "debug.internalConsoleOptions": "neverOpen",
    "debug.toolBarLocation": "docked",
    "debug.openExplorerOnEnd": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.focusWindowOnBreak": false,
    
    // Hacks ////////////////////////////////////////////////////////

    // Code Runner
    "code-runner.clearPreviousOutput": true,

    // Print Code
    "printcode.fontSize": 10,
    "printcode.browserPath": "/usr/bin/google-chrome-stable",

    // Open in Browser
    "open-in-browser.default": "chrome",
    
    // Multicommand
    "multiCommand.commands": [
        {
            "command": "multiCommand.commentAndDown",
            "sequence": [
                "editor.action.commentLine",
                "cursorDown",
            ]
        },
    ],

    // Languages ////////////////////////////////////////////////////

    // Python
    "python.formatting.provider": "black",
    "python.autoComplete.extraPaths": [
        "/home/timfayz/.pyenv/versions/3.7.4/lib/",
    ],
    "python.dataScience.askForKernelRestart": false,
    "python.languageServer": "Microsoft",
    "python.defaultInterpreterPath": "/home/timfayz/.pyenv/versions/3.7.4/bin/python",

    // C/C++ 
    "C_Cpp.formatting": "Disabled",

    // Markdown
    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.preview.scrollEditorWithPreview": true,

    // Java
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.debug.settings.hotCodeReplace": "auto",
    "java.home": "/usr/lib/jvm/default-java",
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    
    // LaTeX Workshop
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.trim": 1,
    "latex-workshop.latex.pdfWatch.delay": 100,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.autoBuild.run": "never",

