        "terminal.ansiYellow": "#F7CA88"
    },
    // https://github.com/Microsoft/vscode/issues/32579
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // inspect TM scopes 
                "scope": [
                    "comment",
                    "punctuation.definition.comment",
                    "variable.language",
                    "entity.other.attribute-name",
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    
    // Vim
    // "vim.foldfix": true,
    "vim.overrideCopy": true, // def false
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": true,
        "<C-b>": false,
        "<C-f>": false,
        // "<C-c>": false,
        "<C-x>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
        "before": ["<leader>", "a"],
        "after": ["m", "l", "g", "g", "V", "G"]
        },
        {
        "before": ["<leader>", "<leader>"],
        "commands": [":w"]
        },
        {
        "before": ["<C-l>"],
        "commands": [":nohl"]
        },
